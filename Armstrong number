#include <iostream>
#include <cmath>
using namespace std;


bool isArmstrong(int number) {
    int originalNumber = number;
    int numDigits = 0;
    int sum = 0;

    
    while (originalNumber != 0) {
        originalNumber /= 10;
        ++numDigits;
    }

   
    originalNumber = number;

  
    while (originalNumber != 0) {
        int digit = originalNumber % 10;
        sum += std::pow(digit, numDigits);
        originalNumber /= 10;
    }

    return sum == number;
}

int main() {
    int num;

    cout << "Enter a number: ";
    cin >> num;

    if (isArmstrong(num)) {
        cout << num << " is an Armstrong number." << std::endl;
    } else {
        cout << num << " is not an Armstrong number." << std::endl;
    }

    return 0;
}
