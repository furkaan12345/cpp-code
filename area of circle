#include <iostream>
#include <cmath>
using namespace std;


int main() {
    const double PI = 3.14159265358979323846; 

    double radius;

    
   cout << "Enter the radius of the circle: ";
    cin >> radius;

        double area = PI * pow(radius, 2);

    cout << "Area of the circle with radius " << radius << " is: " << area << endl;

    return 0;
}
